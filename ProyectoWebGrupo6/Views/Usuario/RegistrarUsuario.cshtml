@model ProyectoWebGrupo6.Entidades.Usuario
@{
    ViewBag.Title = "RegistrarUsuario";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";

}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear Cuenta</h3></div>
                            <div class="card-body">
                                @if (ViewBag.msjPantalla!=null) {
                                    <div class="alert alert-warning" role="alert" style="text-align:center">
                                        @ViewBag.MsjPantalla
                                    </div>
                                }
                                @using (Html.BeginForm("RegistrarUsuario", "Usuario"))
                                {
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 mb-md-0">
                                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-user", @placeholder = "Ingrese su nombre", @type ="Text",@required = "true", @Id = "Nombre"})
                                                <label for="Nombre">Nombre</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control form-control-user", @placeholder = "Ingrese sus apellidos", @type = "Text", @required = "true", @Id = "Apellidos" })
                                                <label for="Apellidos">Apellidos</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-floating mb-3">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", @placeholder = "Ingrese su correo electrónico", @type = "Email", @required = "true", @Id = "Email" })
                                        <label for="Email">Correo Electrónico</label>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 mb-md-0">
                                                @Html.TextBoxFor(m => m.Contrasenna, new { @class = "form-control form-control-user", @placeholder = "Ingrese su contraseña", @type = "Password", @required = "true", @Id = "Contrasenna" })
                                                <label for="Contrasenna">Contraseña</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating mb-3 mb-md-0">
                                                @Html.TextBoxFor(m => m.ConfirmacionContrasenna, new { @class = "form-control form-control-user", @placeholder = "Ingrese su contraseña nuevamente", @type = "Password", @required = "true", @Id = "confirmacionContrasenna" })
                                                <label for="confirmacionContrasenna">Confirmar contraseña</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <div class="form-floating mb-3 mb-md-0">
                                                @Html.TextBoxFor(m => m.Direccion.Provincia, new { @class = "form-control form-control-user", @placeholder = "Ingrese su provincia", @type = "Text", @required = "true", @Id = "Provincia" })
                                                <label for="Provincia">Provincia</label>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-floating mb-3 mb-md-0">
                                                @Html.TextBoxFor(m => m.Direccion.Canton, new { @class = "form-control form-control-user", @placeholder = "Ingrese su cantón", @type = "Text", @required = "true", @Id = "Canton" })
                                                <label for="Canton">Cantón</label>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-floating mb-3 mb-md-0">
                                                @Html.TextBoxFor(m => m.Direccion.Distrito, new { @class = "form-control form-control-user", @placeholder = "Ingrese su distrito", @type = "Text", @required = "true", @Id = "Distrito" })
                                                <label for="Distrito">Distrito</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-floating mb-3">
                                        @Html.TextBoxFor(m => m.Direccion.DireccionExacta, new { @class = "form-control form-control-user", @placeholder = "Ingrese su dirección exacta", @type = "Text", @required = "true", @Id = "DireccionExacta" })
                                        <label for="DireccionExacta">Dirección Exacta</label>
                                    </div>
                                    <div class="mt-4 mb-0">
                                        <div class="d-grid">
                                            <input type="submit" class="btn btn-block InputColor" value="Crear Cuenta"></input>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="card-footer text-center py-3">
                                <div class="small"><a href="@Url.Action("IniciarSesionUsuario", "Usuario")">¿Tienes una cuenta? Ir al Inicio de Sesión</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

